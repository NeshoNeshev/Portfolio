@model Portfolio.Web.ViewModels.Administration.Certificate.CertificateInputModel
@{
    ViewData["Title"] = "Create Course";
}
<div class="text-center">
    <h1 class="text-primary">@this.ViewData["Title"]</h1>
</div>
<form method="post" asp-action="CreateCertificate">
    <section class="border border-primary">
        <div class="container">
            <div class="row" style="margin-bottom: 20px">
                <div class="col-md-4">
                    <label asp-for="CertificateName" class="text-primary"></label>
                    <input asp-for="CertificateName" class="form-control" />
                    <span asp-validation-for="CertificateName" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Description" class="text-primary"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Date" class="text-primary"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Link" class="text-primary"></label>
                    <input asp-for="Link" class="form-control" />
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="CourseId" class="text-primary"></label>
                    <select asp-for="CourseId" asp-items="Model.CourseDropDowns.Select(x=> new SelectListItem(x.CourseName,x.Id))" class="form-control"></select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </section>
    <br />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
        Save
    </button>

    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Do you want to save these changes</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>