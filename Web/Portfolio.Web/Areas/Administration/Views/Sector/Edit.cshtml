@model Portfolio.Web.ViewModels.Administration.Dashboard.EditSectorInputModel

@{
    this.ViewData["Title"] = "Edit Category";
}

<div class="text-center">
    <h1>@this.ViewData["Title"]</h1>
</div>

<form method="post" asp-action="Edit">
    <section class="border border-primary">
        <div class="container">
            <p class="align-content-center">Create Company</p>
            <div class="row" style="margin-bottom: 20px">
                <div class="col-sm">
                    <label asp-for="SectorName" class="text-primary"></label>
                    <input asp-for="SectorName" class="form-control" />
                    <span asp-validation-for="SectorName" class="text-danger"></span>
                </div>
                <div class="col-sm">
                    <label asp-for="NewSectorName" class="text-primary"></label>
                    <input asp-for="NewSectorName" class="form-control" />
                    <span asp-validation-for="NewSectorName" class="text-danger"></span>
                </div>
            </div>
        </div>
    </section>
    <input type="submit" class="btn-primary" />
</form>