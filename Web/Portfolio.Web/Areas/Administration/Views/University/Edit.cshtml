@using Portfolio.Common
@model Portfolio.Web.ViewModels.Administration.University.EditUniversityInputModel
@{
    this.ViewData["Title"] = "Edit University";
}

<div class="text-center">
    <h1 class="text-primary">@this.ViewData["Title"]</h1>
</div>

@if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    <form method="post" asp-action="Edit">
        <section class="border border-primary">
            <div class="container">
                <div class="row" style="margin-bottom: 20px">
                    <div class="col-md-2">
                        <label asp-for="Id" class="text-primary"></label>
                        <select asp-for="Id" class="form-control">
                            @foreach (var item in Model.UniversityDropDown)
                            {
                                <option value="@item.Id">@item.UniversityName</option>
                            }
                        </select>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="NewUniversityName" class="text-primary"></label>
                        <input asp-for="NewUniversityName" class="form-control" placeholder="Enter new name" />
                        <span asp-validation-for="NewUniversityName" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </section>
        <br />
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
            Save
        </button>

        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Do you want to save these changes</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

}
