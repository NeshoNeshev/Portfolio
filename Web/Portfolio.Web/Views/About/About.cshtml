@using Portfolio.Common
@using Portfolio.Web.ViewModels.PrivateInformationViewModel
@model Portfolio.Web.ViewModels.PrivateInformationViewModel.AboutModel
@{ this.ViewData["Title"] = "About Page"; }

<section id="about" class="about">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2 id="demo" class="headertekst">About Me</h2>
            <a href="@GlobalConstants.Facebook" target="_blank"><i class="bx bxl-facebook" style="font-size: 1.5em;"></i></a>
            <a href="@GlobalConstants.Github" target="_blank"><i class="bx bxl-github" style="font-size: 1.5em;"></i></a>
            <a href="@GlobalConstants.LinkedIn" target="_blank"><i class="bx bxl-linkedin" style="font-size: 1.5em;"></i></a>
        </div>

        <div class="row">
            @foreach (var item in Model.privateInformation)
            {
                <div class="col-lg-4">
                    <img src="/images/bg_2.png" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 pt-4 pt-lg-0 content">
                    <p>If you have a problem that can be solved with regular expression, you already have two problems.</p>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li> <strong>FirstName:</strong> <span>@item.FirstName</span></li>
                                <li> <strong>LastName:</strong> <span>@item.LastName</span></li>
                                <li> <strong>ThirdName:</strong> <span>@item.ThirdName</span></li>
                                <li> <strong>Birthday:</strong> <span>@item.Birthday</span></li>
                                <li> <strong>Phone:</strong> <span><a href="tel:+359 888 724 640">@item.PhoneNumber</a></span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><strong>Age:</strong> <span>@item.Birthday</span></li>
                                <li><strong>Degree:</strong> <span>@item.Degree</span></li>
                                <li><strong>City:</strong> <span>@item.Town</span></li>
                                <li><strong>Gender:</strong> <span>@item.Gender</span></li>
                            </ul>
                        </div>
                    </div>
                    <p>
                        @item.Description
                    </p>
                </div>
            }

        </div>
    </div>
</section>