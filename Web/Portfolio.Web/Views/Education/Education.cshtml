@using Portfolio.Common
@model Portfolio.Web.ViewModels.EducationViewModels.AllEducationsViewModel
@{
    ViewData["Title"] = "Education page";
}

<section class="education">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2 class="headertekst">Education</h2>
            <a href="@GlobalConstants.Facebook" target="_blank"><i class="bx bxl-facebook" style="font-size: 1.5em;"></i></a>
            <a href="@GlobalConstants.Github" target="_blank"><i class="bx bxl-github" style="font-size: 1.5em;"></i></a>
            <a href="@GlobalConstants.LinkedIn" target="_blank"><i class="bx bxl-linkedin" style="font-size: 1.5em;"></i></a>
        </div>
        @foreach (var item in Model.EducationViewModels)
        {
            var specialityName = item.Specialties.First(x => x.SpecialtyName != null);
            <div class="card">
                <div class="card-body">
                    <h3>@item.UniversityName - @item.Period</h3>
                  
                    <p class="h5"><em>@specialityName.SpecialtyName</em></p>
                </div>
            </div>
            <h3 id="subject" class="education-title">Subjects Studied</h3>
            foreach (var speciality in item.Specialties)
            {
                <p class="h5"><em>@speciality.SpecialtyName.</em></p>
                foreach (var course in speciality.Courses)
                {
                    <div class="row">
                        @for (int i = 0; i < speciality.Courses.Count; i++)
                        {
                            if (i % 2 == 0)
                            {
                                <div class="col-lg-6">
                                    <div class="education-item pb-0">
                                        <ul>
                                            <h4>@course.Date[i]</h4>
                                            <li>@course.CourseName[i]</li>
                                            <li>@course.Description[i]</li>
                                            @if (course.Certificates.Count > 0)
                                            {
                                                var certificate = course.Certificates.First(x => x.Link != null);

                                                <li>
                                                    <a href="@certificate.Link[i].ToString()" target="_blank">Certificate...</a>
                                                </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-6">
                                    <div class="education-item pb-0">
                                        <ul>
                                            <h4>@course.Date[i]</h4>
                                            <li>@course.CourseName[i]</li>
                                            <li>@course.Description[i]</li>
                                            @if (course.Certificates.Count > 0)
                                            {
                                                
                                                var certificate = course.Certificates.First(x=>x.Link != null);
                                                <li>
                                                    <a href="@certificate.Link[i].ToString()" target="_blank">Certificate...</a>
                                                </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }

            }
        }
    </div>
</section>


