@using Portfolio.Common
@model Portfolio.Web.ViewModels.ProjectViewModels.AllProjectViewModel
@{
    ViewData["Title"] = "Projects";
}
<div class="section-title">
    <h2 class="headertekst">Projects</h2>
    <a href="@GlobalConstants.Facebook" target="_blank"><i class="bx bxl-facebook" style="font-size: 1.5em;"></i></a>
    <a href="@GlobalConstants.Github" target="_blank"><i class="bx bxl-github" style="font-size: 1.5em;"></i></a>
    <a href="@GlobalConstants.LinkedIn" target="_blank"><i class="bx bxl-linkedin" style="font-size: 1.5em;"></i></a>
</div>
<div class="container">
    <div class="row">
        @foreach (var project in Model.ProjectViewModels)
        {
            <div class="col-md-4 text-center d-flex ftco-animate">
                <a href="@project.SiteUrl" class="projects" target="_blank">
                    <div class="desc">
                        <h3 class="mb-5"> @project.ProjectName</h3>
                        <figure class="figure">
                            <img src="@project.ImgUrl" class="figure-img img-fluid rounded" alt="">
                            <figcaption class="figure-caption"></figcaption>
                        </figure>
                        <h4 class="mb-5">@project.Content!</h4>
                    </div>
                </a>
            </div>
        }

    </div>
</div>