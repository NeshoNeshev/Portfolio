@using Portfolio.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - Portfolio.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Exp.css" />
    <link rel="stylesheet" href="~/boxicons/css/boxicons.css" />
</head>
<body>
      
<header>
    <div></div>
    <nav class="navbar navbar-expand-sm  navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a  style="color: #0563bb" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Nesho</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial"/>
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a style="color: #0563bb" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a style="color: #0563bb" class="nav-link" asp-area="" asp-controller="About" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a style="color: #0563bb" class="nav-link" asp-area="" asp-controller="Certificate" asp-action="Certificate">Home</a>
                    </li>
                    <li class="nav-item">
                        <a style="color: #0563bb" class="nav-link" asp-area="" asp-controller="Education" asp-action="Education">Educaton</a>
                    </li>
                    <li class="nav-item">
                        <a style="color: #0563bb" class="nav-link" asp-area="" asp-controller="ProfessionalExperience" asp-action="ProfessionalExperience">ProfessionalExperience</a>
                    </li>
                    <li class="nav-item">
                        <a style="color: #0563bb" class="nav-link" asp-area="" asp-controller="Project" asp-action="Project">Project</a>
                    </li>
                    <li class="nav-item">
                        <a style="color: #0563bb" class="nav-link" asp-area="" asp-controller="Contact" asp-action="Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container box-shadow mb-3">
    <partial name="_CookieConsentPartial"/>
    <main role="main" class="pb-3">
        @this.RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    &copy; @DateTime.UtcNow.Year. All Rights Reserved Designed by <a href="" target="_blank"><span>Nesho Neshev</span></a>
    <button onclick="topFunction()" id="topButton" class="btn btn-primary btn-sm">Top</button>
    <a href="@GlobalConstants.Facebook" target="_blank" class="facebook" style="float: right"><i class="bx bxl-facebook"></i></a>
    <a href="@GlobalConstants.Github" target="_blank" class="github" style="float: right"><i class="bx bxl-github"></i></a>
    <a href="@GlobalConstants.LinkedIn" target="_blank" class="linkedin" style="float: right"><i class="bx bxl-linkedin"></i></a>
</footer>
<script src="typed.js/typed.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
